<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password digest</th>
      <th>Address</th>
      <th>Countries</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customers| %>
      <tr>
        <td><%= customers.name %></td>
        <td><%= customers.email %></td>
        <td><%= customers.password_digest %></td>
        <td><%= customers.address %></td>
        <td><%= customers.countries_id %></td>
        <td><%= link_to 'Show', customers %></td>
        <td><%= link_to 'Edit', edit_customers_path(customers) %></td>
        <td><%= link_to 'Destroy', customers, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

