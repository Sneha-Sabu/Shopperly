<p id="notice"><%= notice %></p>

<h1>Countries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |countries| %>
      <tr>
        <td><%= countries.name %></td>
        <td><%= countries.latitude %></td>
        <td><%= countries.longitude %></td>
        <td><%= link_to 'Show', countries %></td>
        <td><%= link_to 'Edit', edit_countries_path(countries) %></td>
        <td><%= link_to 'Destroy', countries, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Countries', new_countries_path %>
