<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |categories| %>
      <tr>
        <td><%= categories.name %></td>
        <td><%= link_to 'Show', categories %></td>
      </tr>
    <% end %>
  </tbody>
</table>

