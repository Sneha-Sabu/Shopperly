<p id="notice"><%= notice %></p>
<section id="featured" class="featured">
<div class="container">
<div class="row">
<div class="col-lg-12">  
<h1>Order details</h1>

<table  width="100%" cellpadding="5px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th>Pay type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.pay_type %></td>
        <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="/admin">Back to Admin Dashboard</a>



</div>
</div>
</div>
</section><!-- End Featured Section -->
