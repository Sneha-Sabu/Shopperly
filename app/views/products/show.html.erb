<p id="notice"><%= notice %></p>
<section id="featured" class="featured">
<div class="container">
<div class="row">
<div class="col-lg-12">   
<p>
  <strong>Name:</strong>
  <%= @products.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @products.description %>
</p>

<p>
  <%= image_tag @products.image , :class => "style_image" %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@products.price) %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @products.brand %>
</p>

<p>
  <strong>Category:</strong>
  <%= @products.categories.name %>
</p>

<div><%= button_to 'Add to cart', line_item_index_path(products_id: @products), class: 'button is-warning add-to-cart' %></div>

<div><%= link_to 'Back', products_index_path %> </div>


</div>
</div>
</div>
</section><!-- End Featured Section -->
