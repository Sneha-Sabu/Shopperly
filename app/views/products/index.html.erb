<p id="notice"><%= notice %></p>

 

<div class="col-lg-12">     
<center><h1>Products</h1>
<%= form_tag(products_index_path, method: :get) do %>
<%= text_field_tag :term,  params[:term]  %>
<%= submit_tag 'Search' %>
<% end %>
</center>
<table class="products" width="100%" cellpadding="5px">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Price</th>
      <th>Brand</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |products| %>
      <tr class="<%= cycle("list_line_odd", "list_line_even") %>">
        <td class="list_description"><%= products.name %></td>
        
        <td><%= image_tag products.image , :class => "list_image" %></td>
        <td class="list_actions"><%= number_to_currency(products.price) %></td>
        <td class="list_actions"><%= products.brand %></td>
        <td class="list_actions"><%= products.categories.name %></td>
        <td class="list_actions" style="font-size: 18px; color: white;"><%= link_to 'View Details', products %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @products %>

</div>
</div>
</section><!-- End Featured Section -->
