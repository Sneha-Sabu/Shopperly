<p id="notice"><%= notice %></p>

<h1>Products</h1>

<%= form_tag(products_index_path, method: :get) do %>
<%= text_field_tag :term,  params[:term]  %>
<%= submit_tag 'Search' %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Price</th>
      <th>Brand</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |products| %>
      <tr>
        <td><%= products.name %></td>
        
        <td><%= image_tag products.image , :class => "style_image" %></td>
        <td><%= products.price %></td>
        <td><%= products.brand %></td>
        <td><%= products.categories.name %></td>
        <td><%= link_to 'Show', products %></td>
        <td><%= link_to 'Edit', edit_products_path(products) %></td>
        <td><%= link_to 'Destroy', products, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @products %>

<%= link_to 'New Products', new_products_path %>
